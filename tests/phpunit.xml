<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.1/phpunit.xsd"
         backupGlobals="false"
         bootstrap="./SP/bootstrap.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         cacheDirectory=".phpunit.cache"
         backupStaticProperties="false">
    <coverage>
        <report>
            <clover outputFile="./_output/coverage-clover.xml"/>
            <text outputFile="php://stdout" showUncoveredFiles="true"
                  showOnlySummary="true"/>
        </report>
    </coverage>
    <testsuites>
        <testsuite name="core">
            <directory suffix=".php">./SP/Core</directory>
            <directory suffix=".php">./SP/Domain</directory>
            <directory suffix=".php">./SP/Infrastructure</directory>
            <directory suffix=".php">./SP/Mvc</directory>
            <directory suffix=".php">./SP/Util</directory>
            <exclude>./SP/Domain/Account/Services/Builders/AccountSearchTokenizerDataTrait.php</exclude>
            <exclude>./SP/Domain/Export/Services/XmlTrait.php</exclude>
        </testsuite>
        <testsuite name="modules">
            <directory suffix=".php">./SP/Modules/Web</directory>
            <directory suffix=".php">./SP/Modules/Api</directory>
            <directory suffix=".php">./SP/Modules/Cli</directory>
            <exclude>./SP/Modules/Api</exclude>
            <exclude>./SP/Modules/Cli</exclude>
        </testsuite>
    </testsuites>
    <logging/>
    <source>
        <include>
            <directory suffix=".php">../lib/SP</directory>
            <directory suffix=".php">../app/modules/web</directory>
        </include>
        <exclude>
            <directory suffix=".php">../lib/SP/Html/Assets</directory>
            <directory suffix=".php">../lib/SP/Html/DataGrid</directory>
            <file>../lib/SP/Domain/Config/Adapters/ConfigData.php</file>
        </exclude>
    </source>
    <php>
        <ini name="zend.assertions" value="1"/>
    </php>
</phpunit>
